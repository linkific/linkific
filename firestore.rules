/**
 * @file Firestore Security Rules
 * @description This ruleset allows anyone to submit contact messages and job applications.
 *              Access to read, update, or delete these submissions is restricted to authenticated users.
 * @dataStructure
 *  - /contactMessages/{contactMessageId}: Stores contact messages.
 *  - /jobApplications/{jobApplicationId}: Stores job applications.
 * @keySecurityDecisions
 *  - Public submissions: Anyone can submit contact messages and job applications without authentication.
 *  - Authenticated-only access for management: Only logged-in users can view, update, or delete submissions.
 * @denormalizationForAuthorization Not applicable in this scenario.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to create contact messages, but restricts reading, updating, and deleting to authenticated users.
     * @path /contactMessages/{contactMessageId}
     * @allow (create) - Any user can create a contact message.
     * @allow (get, list, update, delete) - Authenticated users can manage messages.
     * @principle Allows public submissions with authenticated-only management.
     */
    match /contactMessages/{contactMessageId} {
      allow get, list: if isSignedIn();
      allow create: if true;
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Allows anyone to submit job applications, but restricts reading, updating, and deleting to authenticated users.
     * @path /jobApplications/{jobApplicationId}
     * @allow (create) - Any user can create a job application.
     * @allow (get, list, update, delete) - Authenticated users can manage applications.
     * @principle Allows public submissions with authenticated-only management.
     */
    match /jobApplications/{jobApplicationId} {
      allow get, list: if isSignedIn();
      allow create: if true;
      allow update, delete: if isSignedIn();
    }

    /**
     * @description Checks if the user is signed in.
     * @return {bool} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }
  }
}
